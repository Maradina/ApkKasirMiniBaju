        private void btnsimpan_Click(object sender, EventArgs e)
        {
            string hasil = "\nNama Barang = " + cmbNamaBarang.Text +
                            "\nHarga Barang = " + txtHargaBarang.Text +
                             "\nJumlah Barang = " + txtJumlahBarang.Text;



            if (!string.IsNullOrEmpty(cmbNamaBarang.Text))
                hasil += "\nNama Barang = " + cmbNamaBarang.Text;
            else
                hasil += "\nNama Barang belum dipilih";

            lblview.Text = hasil;

        }

        private void txtHargaBarang_TextChanged(object sender, EventArgs e)
        {

        }

        private void cmbNamaBarang_SelectedIndexChanged(object sender, EventArgs e)
        {

            int pilih;
            pilih = cmbNamaBarang.SelectedIndex;
            switch (pilih)
            {
                case 0://Dress
                    txtHargaBarang.Text = "250.000";
                    break;
                case 1://Kemeja
                    txtHargaBarang.Text = "500.000";
                    break;
                case 2://Sweater
                    txtHargaBarang.Text = "300.000";
                    break;

                   
            }

        }

